<p id="notice"><%= notice %></p>

<h1>Listing Routes <%= link_to 'Back', root_path , :class => "btn btn-default"%></h1>

<table class="table table-striped custab">
  <thead>
    <tr>
      <th>Name</th>
      <th>Vehicle</th>
      <th>Passenger</th>
      <th>Initial point</th>
      <th>Final point</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= route.vehicle_id %></td>
        <td><%= route.passenger_id %></td>
        <td><%= route.initial_point %></td>
        <td><%= route.final_point %></td>
        <td><%= link_to 'Show', route, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_route_path(route), :class => "btn btn-default" %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path , :class => "btn btn-success"%>
<%= link_to 'Back', root_path , :class => "btn btn-default"%>

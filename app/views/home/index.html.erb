<% content_for :styles do %>
    <%= stylesheet_link_tag 'home' %>
<% end %>
<div class="container-fluid">
    
    <!-- Second navbar for search -->
    <nav class="navbar navbar-inverse">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_path %>">Journey Manager</a>
        </div>
    
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-collapse-3">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Home</a></li>
            <li><%= link_to "Vehicles", vehicles_path %></li>
            <li><%= link_to "Routes", routes_path %></li>
            <li><%= link_to "Passengers", passengers_path %></li>
            <li>
            	<%= link_to "Log Out", destroy_user_session_path, data: {method: 'delete'}, :class => "btn btn-default btn-outline btn-circle" %>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container -->
    </nav><!-- /.navbar -->  

    <div class"row">
    	<div class="col-lg-12 col-md-12">
    		<table class="table table-striped custab">
			    <thead>
			        <tr>
			            <th>Route Name</th>
			            <th>Initial Point</th>
			            <th>Final Point</th>
                        <th>Vehicle</th>
                        <th>Passenger</th>
			            <th class="text-center">Action</th>
			        </tr>
			    </thead>
                <tbody>
                    <% @routes.each do |route| %>
			            <tr>
			                <td><%= route.name%></td>
			                <td><%= route.initial_point%></td>
                            <td><%= route.final_point%></td>
                            <td><%= route.vehicle.plate%></td>
			                <td><%= route.passenger.name %></td>
			                <td class="text-center"><%= link_to 'Show', route, :class => "btn btn-info btn-xs" %></td>
			            </tr>
                    <% end %>
                </tbody>
			</table>
    	</div>
    </div>
</div>
<div class="container">
    <h1 class="page-header">New Vehicle</h1>
    <div class="row">
        <%= form_for(@vehicle) do |f| %>
        <!-- edit form column -->
        <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12 personal-info">            
            <% if @vehicle.errors.any? %>
                    <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
                <div class="alert alert-info alert-dismissable">
                    <a class="panel-close close" data-dismiss="alert">Ã—</a> 
                    <i class="fa fa-coffee"></i>
                    <%= pluralize(@vehicle.errors.count, "error") %>. prohibited this vehicle from being saved:
                    <ul>
                        <% @vehicle.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>                  
                </div>
            <% end %>           
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Plate:</label>
                    <div class="col-lg-8">
                        <%= f.text_field :plate , :class => "form-control", :required => true %>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Color:</label>
                    <div class="col-lg-8">
                        <%= f.text_field :color , :class => "form-control", :required => true %>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Year:</label>
                    <div class="col-lg-8">
                        <%= f.select :year, options_for_select(Vehicle.get_year, @vehicle.year), {}, {:class => "form-control", :required => true, :prompt => 'Select Year'} %>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <%= f.submit "Add Vehicle", :class => "btn btn-primary" %>
                        <span></span>
                        <%= link_to 'Back', root_path, :class => "btn btn-default" %>
                    </div>
                </div>
            </form>
            <% end %>
        </div>
    </div>
</div>

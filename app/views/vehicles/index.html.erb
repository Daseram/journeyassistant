<p id="notice"><%= notice %></p>

<h1>Listing Vehicles <%= link_to 'Back', root_path , :class => "btn btn-default"%></h1>

<table class="table table-striped custab">
  <thead>
    <tr>
      <th>Plate</th>
      <th>Color</th>
      <th>Category</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.plate %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.get_category %></td>
        <td><%= vehicle.year %></td>
        <td><%= link_to 'Show', vehicle, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle), :class => "btn btn-default" %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, :class => "btn btn-success"%>
<%= link_to 'Back', root_path , :class => "btn btn-default"%>
